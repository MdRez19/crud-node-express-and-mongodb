<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Star Wars Quote App</title>
</head>

<body>
<h1>May Node and Express be with you.</h1>

<form action="/casts" method="POST">
    <input type="text" placeholder="Enter the cast name" name="cast" />
    <input type="text" placeholder="Enter the character name" name="character" />
    <button type="submit">Submit</button>
</form>
<h2>Quotes</h2>
<ul class="quotes">
    <!-- Loop through quotes -->
    <% for(let i = 0; i < casts.length; i++){ %>
        <li class="quote">
            <!-- Output name from the iterated quote object -->
            <span style="font-weight: bold"><%= casts[i].cast %></span>:
            <!-- Output quote from the iterated quote object -->
            <span style="font-style: italic"><%= casts[i].character %></span>
        </li>
    <% } %>
</ul>

</body>
</html>